{
  "manifest_version": 3,
  "name": "メルカリ閲覧済みチェッカー",
  "version": "1.1",
  "description": "メルカリで以前閲覧した商品を検索一覧でマークします",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "メルカリ閲覧済みチェッカー"
  },
  "content_scripts": [
    {
      "matches": ["https://jp.mercari.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
