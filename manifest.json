{
  "manifest_version": 3,
  "name": "フリマ閲覧済みチェッカー",
  "version": "1.4",
  "description": "フリマサイトで以前閲覧した商品を検索一覧でマークします",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "フリマ閲覧済みチェッカー",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://jp.mercari.com/*",
        "https://*.fril.jp/*",
        "https://*.rakuten.co.jp/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
